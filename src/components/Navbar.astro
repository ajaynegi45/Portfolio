---
import Navicon from "../assets/img/profilephoto.avif";
---
<header id='site-header'>
    <nav class="navbar" aria-label="Main navigation">
        <div class="navbar-left">
            <!-- Navbar Icon -->
            <a href="/" title="Home" aria-label="Go to homepage" class="play-clicked-sound">
                <img src={Navicon.src} alt="Ajay's profile picture" class="navbar-photo" decoding="async"
                     loading="eager" fetchpriority="high"/>
            </a>
        </div>
        <div class="navbar-right">
            <ul class="navbar-links" role="menu">
                <!-- Navigation Links -->

                <!--<li role="menuitem">-->
                <!--    <a href="/about" class="navbar-link play-clicked-sound"-->
                <!--       aria-label="Go to blog">About</a>-->
                <!--</li>-->

                <li role="menuitem">
                    <a href="/blog" class="navbar-link play-clicked-sound" aria-label="Go to blog">Blog</a>
                </li>

                <li role="menuitem">
                    <a href="/project" class="navbar-link play-clicked-sound" aria-label="Go to project section">Project</a>
                </li>

                <li role="menuitem" class="certificate">
                    <a href="/certificate" class="navbar-link play-clicked-sound" aria-label="Go to certificate section">Certificate</a>
                </li>

                <li role="menuitem">
                    <a href="/contact" class="navbar-link play-clicked-sound" aria-label="Go to contact section">Contact</a>
                </li>

            </ul>
        </div>
    </nav>
    <div class="navbar-empty">
    </div>
</header>

<style>
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 9999;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1rem 0.5rem 1rem;
        min-width: 320px;
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        backdrop-filter: blur(8px);
    }

    .navbar-left {
        display: flex;
        align-items: center;
    }

    .navbar-photo {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        cursor: pointer;
    }

    .navbar-right {
        align-items: center;
    }

    .navbar-links {
        color: var(--subheading);
        display: flex;
        gap: 2rem;
        list-style: none;
        //border: 1px solid var(--subheading);
        margin-left: 1rem;
    }

    .navbar-link {
        color: var(--heading);
        text-decoration: none;
        font-size: 1rem;
        font-weight: 500;
        transition: color 0.3s ease;

        //border: 1px solid var(--subheading);
    }

    .navbar-link:hover {
        color: var(--link);
    }

    .navbar-empty {
        width: 100%;
        height: 5rem;
    }

    @media (max-width: 500px) {
        .navbar-links {
            gap: 1rem;
        }
    }

    @media (max-width: 375px) {
        .navbar-links {
            gap: 0.5rem;
            margin-left: 0.5rem;
        }
    }

</style>