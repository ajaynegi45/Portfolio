---
import Layout from '../layouts/Layout.astro';
import Resume from '../assets/Resume.pdf';
import Experience from "../components/Experience.astro";
import ProjectCard from "../components/ProjectCard.astro";
import Skills from "../components/Skills.astro";
import Review from "../components/Review.astro";
---
<Layout title="Ajay Negi | Software Engineer"
        description="Hi, I'm Ajay Negi ‚Äî a Software Engineer who thrives on turning complex challenges into elegant, scalable solutions. Dive into my journey where performance meets precision, and engineering translates into real-world impact.">

    <!-- Main Section -->
    <main class="main-section">

        <!-- Hero Section -->
        <section class="hero-section" aria-labelledby="hero-heading">
            <header class="hero-content">
                <h1 id="hero-heading">Hi, I'm Ajay Negi</h1>
                <p class="hero-subtitle">Software Engineer | From Problem to Production-Ready, at Scale</p>
                <div class="contact-links">
                    <p class="email">
                        <a href="https://uttarakhand-culture.vercel.app/" referrerpolicy="no-referrer" target="_blank"
                           aria-label="Founder of Uttarakhand Culture"><span
                                style="color: var(--subheading)"></span> Uttarakhand Culture</a>
                    </p>

                    <p class="resume-download">
                        <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 512 512"
                             height="12" width="12" xmlns="http://www.w3.org/2000/svg">
                            <path d="M339 314.9L175.4 32h161.2l163.6 282.9H339zm-137.5 23.6L120.9 480h310.5L512 338.5H201.5zM154.1 67.4L0 338.5 80.6 480 237 208.8 154.1 67.4z"></path>
                        </svg>
                        <a href={Resume} class="download-button" aria-label="Download Ajay Negi's Resume">Resume</a>
                    </p>
                </div>
            </header>
        </section>


        <!-- About Section -->
        <section class="about-section">
            <h2 style="font-size: 1.1rem;">About Me</h2>
            <p>I design and engineer robust software systems that scale across cloud environments and adapt to
                real-world complexity. With a strong foundation in distributed architectures, my work is grounded in
                clean code, system reliability, and long-term maintainability. I specialize in taking high-impact
                problems from concept to production-ready cloud-native solutions ‚Äî <span class="highlight-spot"><strong>Engineered to Last</strong></span>.
            </p>


            <!--<p>Always be Architecting and Engineering.</p>-->
        </section>

        <!-- First divider with a label -->
        <div id="divider-label-1" class="hidden">First Section Divider</div>
        <div class="section-divider" role="separator" aria-labelledby="divider-label-1">
            <div></div>
        </div>

        <Skills/>


        <!-- First divider with a label -->
        <div id="divider-label-2" class="hidden">Second Section Divider</div>
        <div class="section-divider" role="separator" aria-labelledby="divider-label-2">
            <div></div>
        </div>


        <!-- Work Experience Section -->
        <Experience/>


        <!-- Second divider with a label -->
        <div id="divider-label-3" class="hidden">Third Section Divider</div>
        <div class="section-divider" role="separator" aria-labelledby="divider-label-3">
            <div></div>
        </div>


        <!-- Project Section -->
        <section class="projects" aria-labelledby="projects-section-heading">
            <header class="projects-header">
                <h3 style="font-size: 1.1rem;" id="projects-section-heading">Projects</h3>
                <a href="https://github.com/ajaynegi45?tab=repositories" class="link"
                   title="View all projects on Ajay Negi's GitHub repository page">
                    <span>More Projects</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none"
                         stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                         class="lucide lucide-external-link">
                        <path d="M15 3h6v6"></path>
                        <path d="M10 14 21 3"></path>
                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                    </svg>
                </a>
            </header>
            <div class="project-cards-container">
                <ProjectCard/>
            </div>
        </section>


        <!-- Third divider with a label -->
        <div id="divider-label-4" class="hidden">Fourth Section Divider</div>
        <div class="section-divider" role="separator" aria-labelledby="divider-label-4">
            <div></div>
        </div>

        <Review/>

        <!-- Third divider with a label -->
        <div id="divider-label-5" class="hidden">Fifth Section Divider</div>
        <div class="section-divider" role="separator" aria-labelledby="divider-label-5">
            <div></div>
        </div>


        <!-- Connect Section -->
        <section class="connect-section" aria-labelledby="connect-section-heading">
            <header class="connect-header">
                <h3 id="connect-section-heading">Let's Connect <span class="heart-emoji"> üíû</span></h3>
                <p>Have an idea, a project, or just want to say hi? Drop me a message below or connect with me on social
                    ‚Äî I'd love to hear from you! ‚ù§Ô∏è</p>
            </header>

            <div class="connect-links">
                <a href="/contact" class="connect-link" aria-label="Leave a message">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" stroke="currentColor"
                         stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                    </svg>
                    Leave a Message
                </a>

                <a href="https://www.linkedin.com/in/ajaynegi45/" class="connect-link" target="_blank" rel="noopener"
                   aria-label="Ajay's LinkedIn profile">
                    <svg width="256" height="256" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid"
                         viewBox="0 0 256 256">
                        <path d="M218.123 218.127h-37.931v-59.403c0-14.165-.253-32.4-19.728-32.4-19.756 0-22.779 15.434-22.779 31.369v60.43h-37.93V95.967h36.413v16.694h.51a39.907 39.907 0 0 1 35.928-19.733c38.445 0 45.533 25.288 45.533 58.186l-.016 67.013ZM56.955 79.27c-12.157.002-22.014-9.852-22.016-22.009-.002-12.157 9.851-22.014 22.008-22.016 12.157-.003 22.014 9.851 22.016 22.008A22.013 22.013 0 0 1 56.955 79.27m18.966 138.858H37.95V95.967h37.97v122.16ZM237.033.018H18.89C8.58-.098.125 8.161-.001 18.471v219.053c.122 10.315 8.576 18.582 18.89 18.474h218.144c10.336.128 18.823-8.139 18.966-18.474V18.454c-.147-10.33-8.635-18.588-18.966-18.453"
                              fill="white"/>
                    </svg>
                    LinkedIn
                </a>

                <a href="https://x.com/ajaynegi45" class="connect-link" target="_blank" rel="noopener"
                   aria-label="Ajay's Twitter/X profile">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1200" height="1227" fill="none"
                         viewBox="0 0 1200 1227">
                        <path fill="#fff"
                              d="M714.163 519.284 1160.89 0h-105.86L667.137 450.887 357.328 0H0l468.492 681.821L0 1226.37h105.866l409.625-476.152 327.181 476.152H1200L714.137 519.284h.026ZM569.165 687.828l-47.468-67.894-377.686-540.24h162.604l304.797 435.991 47.468 67.894 396.2 566.721H892.476L569.165 687.854v-.026Z"/>
                    </svg>
                    X (formerly Twitter)
                </a>

                <a href="https://github.com/ajaynegi45" class="connect-link" target="_blank" rel="noopener"
                   aria-label="Ajay's GitHub profile">
                    <svg width="1024" height="1024" viewBox="0 0 1024 1024" fill="none"
                         xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd"
                              d="M8 0C3.58 0 0 3.58 0 8C0 11.54 2.29 14.53 5.47 15.59C5.87 15.66 6.02 15.42 6.02 15.21C6.02 15.02 6.01 14.39 6.01 13.72C4 14.09 3.48 13.23 3.32 12.78C3.23 12.55 2.84 11.84 2.5 11.65C2.22 11.5 1.82 11.13 2.49 11.12C3.12 11.11 3.57 11.7 3.72 11.94C4.44 13.15 5.59 12.81 6.05 12.6C6.12 12.08 6.33 11.73 6.56 11.53C4.78 11.33 2.92 10.64 2.92 7.58C2.92 6.71 3.23 5.99 3.74 5.43C3.66 5.23 3.38 4.41 3.82 3.31C3.82 3.31 4.49 3.1 6.02 4.13C6.66 3.95 7.34 3.86 8.02 3.86C8.7 3.86 9.38 3.95 10.02 4.13C11.55 3.09 12.22 3.31 12.22 3.31C12.66 4.41 12.38 5.23 12.3 5.43C12.81 5.99 13.12 6.7 13.12 7.58C13.12 10.65 11.25 11.33 9.47 11.53C9.76 11.78 10.01 12.26 10.01 13.01C10.01 14.08 10 14.94 10 15.21C10 15.42 10.15 15.67 10.55 15.59C13.71 14.53 16 11.53 16 8C16 3.58 12.42 0 8 0Z"
                              transform="scale(64)" fill="#ffff"/>
                    </svg>
                    GitHub
                </a>
            </div>
        </section>
    </main>
</Layout>
