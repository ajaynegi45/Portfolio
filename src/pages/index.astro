    /* Hero Section */
    .hero-section {
        margin-bottom: 2rem;
    }

    .hero-content > h1 {
        font-size: 2.365rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .hero-content p.hero-subtitle {
        color: var(--subheading);
        font-weight: 500;
        font-size: 1.2rem;
        margin-top: -0.2rem;
        margin-bottom: 1rem;
    }

    .contact-links {
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-content: center;
        align-items: center;
        gap: 1rem;
    }

    .hero-content p.email,
    .hero-content p.resume-download {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        font-size: 1rem;
        font-weight: 500;
    }

    .hero-content p.resume-download {
        border: 1px solid var(--card-border);
        padding: 0.2rem 0.6rem;
        border-radius: 1rem;
    }

    .hero-content p.resume-download:hover {
        border: 1px solid var(--text5);
        cursor: pointer;
    }

    .hero-content p.resume-download:hover > svg {
        color: var(--text3);
        cursor: pointer;
    }

    .hero-content p.email > svg,
    .hero-content p.resume-download > svg {
        color: var(--subheading);
        width: 0.9rem;
        height: auto;
    }


    @media (max-width: 400px) {
        .contact-links {
            gap: 0.8rem;
        }

        .hero-content p.resume-download {
            padding: 0.25rem 0.7rem;
        }
    }

    /* About Section */
    .about-section {
        margin-bottom: 2rem;
    }

    .about-section > p {
        font-weight: 400;
    }

    /* Project Section */
    .projects {
        margin-bottom: 3.2rem;
    }

    .projects-header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }

    .projects-header > h2 {
        margin-bottom: 0.5rem;
    }

    .projects-header > a {
        font-size: 14px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 0.3rem;
    }

    .projects-header > a > svg {
        font-size: 14px;
        margin-bottom: 3px;
    }

    .project-cards-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        margin-top: 1rem;
    }


    /* Divider */
    .section-divider {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        margin: 2.5rem 0;
    }

    .section-divider > div {
        position: relative; /* Position the inner div for the pseudo-element to be placed correctly */
        width: 100%; /* The width should be full of its parent container */
        max-width: 400px;
    }

    .section-divider > div::before {
        content: "";
        position: absolute;
        top: 50%; /* Position the line vertically centered */
        left: 0;
        right: 0;
        height: 0.1rem; /* Height of the divider line */
        background: linear-gradient(to right, var(--bg), var(--card-border), var(--bg)); /* Gradient border */
        z-index: -1; /* Ensure the pseudo-element stays behind the content */
        transform: translateY(-50%); /* Correct the vertical centering of the divider line */
    }

    .section-divider[role="separator"] {
        border: none;
        outline: none;
    }


    /* Connect Section */
    .connect-section {
        margin-top: -0.5rem;
        margin-bottom: 4rem;
        text-align: center;
    }

    .connect-header > h3 {
        font-size: 1.5rem;
        margin-top: 0;
        margin-bottom: 0.5rem;
        text-align: center;
        color: var(--heading);
    }

    .connect-header > h3 > span.heart-emoji {
        font-size: 2rem;
    }

    .connect-header > p {
        font-size: 0.99rem;
        color: var(--text);
        margin-bottom: 1.5rem;
    }

    .connect-links {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
        align-items: center;
    }

    .connect-link {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border: 1px solid var(--card-border);
        border-radius: 0.5rem;
        font-size: 0.85rem;
        font-weight: 500;
        color: inherit;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
    }

    .connect-link:hover {
        transform: translateY(-3px);
        background-color: var(--link-hover);

    }

    .connect-link > svg {
        transform: none;
    }

    .connect-link svg {
        stroke: white;
        width: 1.2rem;
        height: 1.2rem;
    }

</style>
